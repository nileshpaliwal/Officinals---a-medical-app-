<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iconview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingLeft="1dp"
            android:src="@drawable/icon_2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/enterotp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/edittextenterotp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/edittextenterotp"
                android:text="@string/enter_otp"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edittextenterotp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/enterotp"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:background="@drawable/round"
                android:hint="@string/enter_otp"
                android:paddingLeft="50dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/edittextenterotp"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/edittextenterotp"
                android:layout_toRightOf="@+id/edittextenterotp"
                android:background="@drawable/roundbutton"
                android:text="@string/done"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>